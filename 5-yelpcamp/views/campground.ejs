<%- include('partials/header'); -%>
<div class="container">
    <header class="jumbotron">
        <h2>welcome to campgrounds page</h2>
    </header>
    <button type="button" class="btn btn-info"><a href="/campgrounds/form">Add a new campground</a></button>
    

    <div class="row">
        <% for (var i=0;i<campgrounds.length;i++){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campgrounds[i].image %>"> 
                    <div class="caption">
                        <h3><%= campgrounds[i].name%></h3>
                    </div>
                </div> 
            </div>
        <%}%>
    </div> 
    <%- include('partials/footer'); -%>
</div>
 